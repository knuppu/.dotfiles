filetype plugin on
filetype indent on
syntax on
set nocompatible

set mouse=a
set clipboard+=unnamedplus,unnamed

set number
set relativenumber

set incsearch
set hlsearch

set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab

set smartindent
set showcmd
set laststatus=2
set t_Co=256

set scrolloff=8

"set background=dark
"set ruler
set colorcolumn=80

let mapleader=" "
nnoremap <leader>w :w<cr>
nnoremap <leader>wq :wq<cr>
nnoremap <leader>q :qa!<cr>
vnoremap <leader>y "+yy
nnoremap <leader>p "+p

